from random import randint
from time import sleep
itens = ('PEDRA', 'PAPEL', 'TESOURA')
computador = randint(1, 3)
print('''Opções:
[1] PEDRA
[2] PAPEL
[3] TESOURA''')
jogador = int(input('Qual é a sua jogada:'))
print('JO')
sleep(1)
print('KEN')
sleep(1)
print('PÔ')
print('Computador {}'.format(itens[computador]))
print('Sua jogada: {}'.format(itens[jogador]))
if computador == 1: #PEDRA
  if jogador == 1:
    print('EMPATE')
  elif jogador == 2:
    print('Você ganhou')
  elif jogador ==3:
    print('Você perdeu')
  else:
    print('JOGADA INVÁLIDA')
    
elif computador == 2: #PAPEL
  if jogador == 1:
     print('Você perdeu')   
  elif jogador == 2:
      print('EMPATE')
  elif jogador ==3:
      print('Você venceu')
  else:
    print('JOGADA INVÁLIDA')
elif computador == 3: #TESOURA
  if jogador == 1:
    print('Você venceu')      
  elif jogador == 2:
    print('Você perdeu')
  elif jogador ==3:
    print('EMPATE')
  else:
    print('JOGADA INVÁLIDA')
