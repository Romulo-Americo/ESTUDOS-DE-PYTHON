  #if pergunta3 == str( prod1 and prod2):
    # quantidade = int(input('Digite a quantidade:'))
    #total = (preço1 + preço2) * quantidade
    print('Você irá pagar: R${}'.format(total))
  if pergunta3 == prod1:
    quantidade = int(input('Digite a quantidade:'))
    total = quantidade * preço1
    print('Você irá pagar: R${}'.format(total))
  if pergunta3 == prod2:
    quantidade = int(input('Digite a quantidade:'))
    total = quantidade * preço2
    print('Você irá pagar: R${}'.format(total))
