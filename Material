if pergunta1 == 'sim':
  print('{}:R$ {} \n {}:R$ {}'.format(prod1, preço1, prod2, preço2))
else:
  print('Obrigado pela atenção')
  
pergunta2 = str(input('Você quer adiquirir nossos produtos? \n [sim/não]: '))
if pergunta2 == 'sim':
